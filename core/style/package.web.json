{
  "scripts": {
    "start": "npm-run-all --parallel watch:css start:react",
    "build": "npm-run-all build:css build:react",
    "build:css": "postcss src/core/style/component/tailwind.css -o src/index.css",
    "watch:css": "postcss src/core/style/component/tailwind.css -o src/index.css -w",
    "start:react": "react-scripts start",
    "build:react": "react-scripts build"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "postcss-cli": "*",
    "tailwindcss": "*",
    "@tailwindcss/forms": "*",
    "@fullhuman/postcss-purgecss": "*",
    "postcss": "*"
  }
}
