{
  "command":{
    "init":{
      "vagrant":"vagrant up",
      "ssh":[
        "sudo apt-get update",
        "sudo apt-get install -y htop"
      ],
      "nginx":[
        "sudo apt-get install -y nginx"
      ],
      "apache":[
        "sudo apt-get install -y apache2"
      ],
      "mysql":[
        "sudo apt-get -q -y install mysql-server php5-mysql"
      ],
      "phpmyadmin":[
        "sudo apt-get install -y phpmyadmin"
      ]
    }
  },
  "drupal":{
    "php":{
      "memory_limit":512,
      "upload_max_filesize":1024,
      "post_max_size":1024
    },
    "vagrant":{
      "memory":4096,
      "cpus":2
    }
  },
  "wordpress":{
    "php":{
      "memory_limit":512,
      "upload_max_filesize":1024,
      "post_max_size":1024
    },
    "vagrant":{
      "memory":4096,
      "cpus":2
    }
  },
  "nodeVagrant":{
    "vagrant":{
      "memory":4096,
      "cpus":2
    }
  },
  "ports":{
    "ssh":-2000
  },
  "files":{
    "php.ini":"/etc/php5/apache2/php.ini",
    "apache.conf":"/etc/apache2/sites-enabled/{siteName}.conf",
    "phpmyadmin.conf":"/etc/phpmyadmin/apache.conf",
    "nodeService.conf":"/etc/init/{siteName}.conf"
  }
}
